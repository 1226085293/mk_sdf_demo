CCEffect %{
  techniques:
  - passes:
    - vert: sprite-vs:vert
      frag: sprite-fs:frag
      depthStencilState:
        depthTest: false
        depthWrite: false
      blendState:
        targets:
        - blend: true
          blendSrc: src_alpha
          blendDst: one_minus_src_alpha
          blendDstAlpha: one_minus_src_alpha
      rasterizerState:
        cullMode: none
      properties:
        alphaThreshold: { value: 0.5 }
        radius_f: { value: 10 }
        sdf_texture: { value: grey }
}%

CCProgram sprite-vs %{
  precision highp float;
  #include <cc-global>
  #if USE_LOCAL
    #include <cc-local>
  #endif
  #if SAMPLE_FROM_RT
    #include <common>
  #endif
  in vec3 a_position;
  in vec2 a_texCoord;
  in vec4 a_color;

  out vec4 color;
  out vec2 uv0;

  // 传递的数据
  // uniform Float {
  //   float rounded_f;
  // }

  vec4 vert () {
    vec4 pos = vec4(a_position, 1);

    #if USE_LOCAL
      pos = cc_matWorld * pos;
    #endif

    #if USE_PIXEL_ALIGNMENT
      pos = cc_matView * pos;
      pos.xyz = floor(pos.xyz);
      pos = cc_matProj * pos;
    #else
      pos = cc_matViewProj * pos;
    #endif

    uv0 = a_texCoord;
    #if SAMPLE_FROM_RT
      CC_HANDLE_RT_SAMPLE_FLIP(uv0);
    #endif
    color = a_color;

    return pos;
  }
}%

CCProgram sprite-fs %{
  precision highp float;
  #include <embedded-alpha>
  #include <alpha-test>
	#include <cc-global>

  #include "mk_dist_field_func"
  #include "mk_dist_field_transform"


  in vec4 color;

  // 传递的属性
  uniform Float {
    // 描边半径
    float radius_f;
  };
  // sdf 纹理
  uniform sampler2D sdf_texture;

  #if USE_TEXTURE
    in vec2 uv0;
    #pragma builtin(local)
    layout(set = 2, binding = 11) uniform sampler2D cc_spriteTexture;
  #endif

  vec4 frag () {
    vec4 o = vec4(1, 1, 1, 1);

    #if USE_TEXTURE
      o *= CCSampleWithAlphaSeparated(cc_spriteTexture, uv0);
      #if IS_GRAY
        float gray  = 0.2126 * o.r + 0.7152 * o.g + 0.0722 * o.b;
        o.r = o.g = o.b = gray;
      #endif


      vec4 color2 = color;
      // 以图片中心点为（0,0）点的渲染坐标
      vec2 render_v2 = (uv0 - vec2(0.5)) * 2.0;

      // 进行采样获取 sdf 纹理上的 color
      255.0 - CCSampleWithAlphaSeparated(sdf_texture, uv0).a;
      // 距离场
      // float dist_f = 0.1;

      // o = mix(o, vec4(1.0, 1.0, 0.0, 1.0), abs(clamp(dist_f - 5.0, 0.0, 1.0) - clamp(dist_f, 0.0, 1.0)));


      o *= color2;
    #endif
    ALPHA_TEST(o);
    return o;
  }
}%
